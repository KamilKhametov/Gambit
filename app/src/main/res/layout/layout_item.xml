<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/titleFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="45dp"
            android:background="#FFFFFF"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_price"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/round_for_btn_price"
            android:text="@string/price"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#43AAAAAA" />


        <Button
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/round_for_btn_price"
            android:backgroundTint="@color/color_for_action_bar"
            android:text="-"
            android:textStyle="bold"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="301dp"
            android:layout_marginTop="120dp"
            android:text="0"
            android:textColor="@color/black"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_for_btn_price"
            android:backgroundTint="@color/color_for_action_bar"
            android:text="+"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnBasket"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="104dp"
            android:text="В корзину"
            android:textAllCaps="false"
            android:visibility="visible" />


    </RelativeLayout>


</RelativeLayout>