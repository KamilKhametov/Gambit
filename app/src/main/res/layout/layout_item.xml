<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">


        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/titleFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="205dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFF"
            android:text="@string/app_name" />


        <Button
            android:id="@+id/btn_price"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:layout_marginStart="205dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/round_for_btn_price"
            android:text="@string/price"
            android:textColor="#000000"
            android:textStyle="bold"
            app:backgroundTint="#43AAAAAA" />


        <Button
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/round_for_btn_price"
            android:backgroundTint="@color/color_for_action_bar"
            android:text="+"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="343dp"
            android:layout_marginTop="100dp"
            android:text="0"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="365dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/round_for_btn_price"
            android:backgroundTint="@color/color_for_action_bar"
            android:text="-"
            android:textStyle="bold" />


    </RelativeLayout>

    
</RelativeLayout>